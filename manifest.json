{
  "manifest_version": 3,
  "name": "Comment Extractor",
  "version": "1.0",
  "description": "Extracts comments from Facebook live streams and sends them to an API.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
